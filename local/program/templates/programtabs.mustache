<ul class="course_extended_menu_list">
    {{# is_siteadmin }}
        <li>
            <div class = "coursebackup course_extended_menu_itemcontainer" >
                <a class="course_extended_menu_itemlink" href="{{{config.wwwroot}}}/local/program/index.php" title="{{# str }} view_programs, local_program {{/ str }}">
                    <i class="icon fa fa-columns" aria-hidden="true"></i>
                </a>
            </div>
        </li>
    {{/ is_siteadmin }}
    {{#location_url }}
        <li>
            <div class = "coursebackup course_extended_menu_itemcontainer" >
                <a href="{{ location_url }}" class="course_extended_menu_itemlink create_ilt" title="Location">
                    <i class="icon fa fa-map-marker" aria-hidden="true"></i>
                </a>
            </div>
        </li>
    {{/location_url }}
    {{# creatacurriculum }}
        <li>
            <div class = "coursebackup course_extended_menu_itemcontainer" >
                <a class="course_extended_menu_itemlink create_ilt" title="{{# str }} create_curriculum, local_program {{/ str }}"onclick="(function(e){ require('local_program/ajaxforms').init({contextid:{{contextid}}, component:'local_program', callback:'program_form', form_status:0, plugintype: '{{plugintype}}', pluginname: '{{plugin_name}}', id:0, title: 'createcurriculum' }) })(event)">
                    <span class="createicon">
                        <span class="custom_curriculum_icon icon"><i class="fa fa-plus createiconchild" aria-hidden="true"></i></span>

                    </span>
                </a>
            </div>
        </li>
    {{/ creatacurriculum }}
</ul>
<div id="status_tabs">
    <div class="p-15">
        <div id="curriculumcontent" >
            {{# curriculumslist }} {{{ curriculumslist }}} {{/ curriculumslist }}
        </div>
    </div>
</div>