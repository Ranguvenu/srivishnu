{{# curriculum}}
<div class="classview_topcontainer w-full pull-left">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 classview_topcontent pl-0">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 classview_topcontent_right">
            <h3>{{ name }}</h3>
            <div class="description">
                {{# isdescription}}
                    {{^ descriptionstring}}
                        <p class="text-muted">{{{ description }}}</p>
                    {{/ descriptionstring }}
                    {{# descriptionstring}}
                        <p class="text-muted">{{ descriptionstring }} ...</p>
                    {{/ descriptionstring }}
                {{/ isdescription}}
                {{^ isdescription }}
                    <p class="alert alert-info text-xs-center">{{#str}}nocoursedesc, local_program {{/ str }}</p>
                {{/ isdescription }}
            </div>
        </div>
    </div>
</div>

<div class="mt-15 w-full pull-left">
    <div class="col-md-12 col-sm-12 col-xs-12 p-0 mt-15">
        <h3 class="watnext_head pb-15">What's next?</h3>
    </div>
    <div class="course_buttons col-md-12 col-sm-12 col-xs-12 pt-15 pb-15">
        <div class="col-md-6 col-sm-9 col-xs-9">Do you want to <b>Create Year</b></div>
        <div class="col-md-6 col-sm-3 col-xs-3 pr-0">
            <a href="javascript:void(0)" onclick="(function(e){ require('local_program/ajaxforms').init({contextid:1, component:'local_program', callback:'curriculum_manageyear_form', form_status:0, plugintype: 'local', pluginname: 'program_addyear', id: 0, curriculumid:{{curriculumid}}, programid:{{program}}  }) })(event)"><button class="btn btn-primary">Go to</button></a>
        </div>
    </div>
    <div class="course_buttons col-md-12 col-sm-12 col-xs-12 pt-15 pb-15">
         <div class="col-md-6 col-sm-9 col-xs-9">Do you want to <b>Add Users</b></div>
         <div class="col-md-6 col-sm-3 col-xs-3 pr-0">
            <a href="{{cfg.wwwroot}}/local/program/enrollusers.php?ccid={{curriculumid}}" ><button class="btn btn-primary">Go to</button></a>
        </div>
    </div>
	{{#linkpath}}
	 <div class="course_buttons col-md-12 col-sm-12 col-xs-12 pt-15 pb-15">
         <div class="col-md-6 col-sm-12 col-xs-12"></div>
         <div class="col-md-2 col-sm-12 col-xs-12 pr-0 pull-right">
            <a href='{{ linkpath }}' ><button class="btn btn-primary">Continue</button></a>
        </div>
    </div>
  {{/linkpath}}
</div>
{{#js}}
    $( document ).ready(function() {
        $(".trainer-next, .trainer-prev").click(function () {
            var div = $(".trainers_scroll")[0];
            var html = $(div).html();
            $(div).remove();
            $(".topcontent_right_bottom").append("<div class=\"col-md-4 trainers_scroll\">" + html + "</div>");
        });
    });

{{/js}}
{{/ curriculum}}