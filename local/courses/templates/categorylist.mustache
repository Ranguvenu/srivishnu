{{!
    @template local_templates/catalog

    This template renders the courses content for the courses plugin.

    Example context (json):
    {}
}}
<div class="w-full pull-left catlist_container">
    <div class="col-md-12 col-sm-12 col-12 p-0 cattop_content">
            <h6 class="pull-left pl-15px catname" title="{{ categoryname }}">{{ categoryname_str }}</h6>
            <!--<div class="pull-right pl-5px pr-5px text-right actions">{{{actions}}}</div>-->
        <div class="pull-right pl-5px pr-5px text-right showoptions{{catgoryid}} actionicons">
            {{# actions }}
                 <span class="pull-right showoptions" data-action="showoptions{{catgoryid}}" onmouseenter="(function(e){ require('theme_epsilon/quickactions').quickactionsCall({ selector:'showoptions{{catgoryid}}' }) })(event)" onmouseleave="(function(e){require('theme_epsilon/quickactions').quickactionsCall({ selector:'showoptions{{catgoryid}}' }) })(event)">
                        <i class="fa fa-ellipsis-h options"></i>
                </span>
                <ul class="col-md-12 col-sm-12 col-12 p-0 options_container" id="showoptions{{catgoryid}}">
                <li>
                    <a href="javascript:void(0)" data-action = "deletecategorymodal{{catgoryid}}" data-value = "{{ catgoryid }}" class="deletecategorymodal" title = "{{# str}} delete {{/ str}}" onclick="(function(e){require('local_courses/deletecategory').init({selector:'deletecategorymodal{{catgoryid}}', contextid:{{ contextid }}, categoryid:{{ catgoryid }}, })})(event)">
                    <i class="fa fa-trash fa-fw" aria-hidden="true" aria-label="Edit"></i></a>
                </li>
                <li>
                     <a href="javascript:void(0)" data-action = "createcategorymodal" data-value = "{{ catgoryid }}" class="createcategorymodal" title = "{{# str}} edit {{/ str}}" onclick="(function(e){require('local_courses/newcategory').init({selector:'createcategorymodal', contextid:{{ contextid }}, categoryid:{{ catgoryid }}, })})(event)">
                    <i class="fa fa-cog fa-fw" aria-hidden="true" aria-label="Edit"></i></a>
                </li>    
                    {{# show }}
                    <li>
                        <a href="index.php?categoryid={{catgoryid}}&visible={{visible_value}}&sesskey={{sesskey}}" title = "{{# str}} hide {{/ str}}">
                        <i class="fa fa-eye" aria-hidden="true" aria-label="Edit"></i></a>
                    </li>
                    {{/ show }}
                    {{^ show }}
                    <li>
                        <a href="index.php?categoryid={{catgoryid}}&visible={{visible_value}}&sesskey={{sesskey}}" title = "{{# str}} show {{/ str}}">
                        <i class="icon fa fa-eye-slash" aria-hidden="true" title="" aria-label="Edit"></i></a>
                    </li>
                    {{/ show }}
                </ul>
            {{/ actions }}
        </div>
    </div>
    <div class="col-md-10 p-0 catbottom_content text-xs-center">
        <div class="col-md-5">
            <!--<div style="background-image: url('{{ catlisticon }}');" alt="{{ categoryname }}" title = "{{ categoryname }}"class="catlistimg" ></div>-->
            <span class="catlisticon"> <i class="fas fa-folder-open"></i> </span>
        </div>
        <div class="col-md-5">
            <span class="catcount mt-10px">{{{ catcount }}}</span> <span class="courses_str">{{# str}}courses, local_courses{{/ str }}</span>
        </div>
    </div>
</div>