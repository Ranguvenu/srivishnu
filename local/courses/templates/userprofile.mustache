{{#response}}
    {{#viewtypeCard}}
        <div class="" id="courses_tab_content">
            <table class="w-full pull-left" id = profile_course_content>
                <thead class="hidden">
                    <tr>
                        <th></th>
                    </tr>
                </thead>

                {{#records}}
                    <tbody>
                        <tr>
                            <td>
                                <div class="w-full pull-left usercourseslist p-2">
                                    
                                    <div class="col-md-8 col-12 pull-left course-details text-left">
                                        <h5><a href="{{url}}" title="{{ name }}" style="color: inherit;"> {{ name }} </a></h5>
                                        {{# description}}
                                            <p>{{ description }}</p>
                                        {{/ description}}
                                        {{^ description}}
                                            <p class="w-full pull-left alert alert-info text-center">{{#str}}nocoursedesc, local_courses{{/str}}</p>
                                        {{/ description}}
                                    </div>
                                    <div class="col-md-3 col-12 pull-right my-2">
                                        {{#str}} progress , search {{/str}}
                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" style="width: {{percentage}}%;" aria-valuenow="{{percentage}}" aria-valuemin="0" aria-valuemax="100">{{percentage}}%</div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                {{/ records}}
            </table>

            {{^ records }}
                <p class="w-full pull-left alert alert-info text-center">{{# str}}nocourseavailiable, local_courses {{/ str}}</p>
            {{/ records }}
        </div>

    {{/viewtypeCard}}
{{/response}}