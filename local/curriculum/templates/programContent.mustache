{{# action}}
    <ul class="course_extended_menu_list">
        {{# assignusers}}
            <li>
                <div class="courseedit course_extended_menu_itemcontainer">
                    <a title="Assign Users" class="course_extended_menu_itemlink" href="{{ assignusersurl }}"><i class="icon fa fa-user-plus fa-fw" aria-hidden="true" title ="Assign Users"></i></a>
                </div>

            </li>
            <li>
                <div class="courseedit course_extended_menu_itemcontainer">
                    <a title="{{# str}} curriculumusers, local_program {{/ str}}" class="course_extended_menu_itemlink" href="{{ cfg.wwwroot }}/local/program/users.php?ccid={{curriculumid}}"><i class="icon fa fa-user" aria-hidden="true"></i></a>
                </div>
            </li>
        {{/ assignusers}}
        {{# bulkenrollusers}}
            <li>
                <div class="courseedit course_extended_menu_itemcontainer">
                    <a title="{{# str}} bulk_enroll, local_program {{/ str}}" class="course_extended_menu_itemlink" href="{{ cfg.wwwroot }}/local/program/mass_enroll.php?id={{curriculumid}}"><i class="icon fa fa-users" aria-hidden="true"></i></a>
                </div>
            </li>
        {{/ bulkenrollusers}}
        <li>
            {{# cannotdelete}}
                <div class="coursebackup course_extended_menu_itemcontainer">
                    <a title="Course backup" class="course_extended_menu_itemlink" href="javascript:void(0)" alt = "{{# str}} delete {{/ str}}"
                        title = "{{# str}} delete {{/ str}}" onclick="(function(e){ require('local_program/program').deleteConfirm({action:'cannotdeletecurriculum', id: {{ curriculumid }}, curriculumid: {{ curriculumid }},curriculumname:'{{curriculumname}}'}) })(event)"><i class="icon fa fa-times" aria-hidden="true" title = "{{# str}} delete {{/ str}}"></i></a>
                </div>
            {{/ cannotdelete}}
            {{# delete}}
                <div class="coursebackup course_extended_menu_itemcontainer">
                    <a title="Course backup" class="course_extended_menu_itemlink" href="javascript:void(0)" alt = "{{# str}} delete {{/ str}}"
                        title = "{{# str}} delete {{/ str}}" onclick="(function(e){ require('local_program/program').deleteConfirm({action:'deletecurriculum', id: {{ curriculumid }}, curriculumid: {{ curriculumid }},curriculumname:'{{curriculumname}}'}) })(event)"><i class="icon fa fa-times" aria-hidden="true" title = "{{# str}} delete {{/ str}}"></i></a>
                </div>
            {{/ delete}}
        </li>
        <li>
            {{# edit}}
                <div class="coursebackup course_extended_menu_itemcontainer">
                    <a title="User enrollments" class="course_extended_menu_itemlink" href="javascript:void(0)" title = "{{# str}} edit {{/str}}" onclick="(function(e){ require('local_program/ajaxforms').init({contextid:1, component:'local_program', callback:'program_form', form_status:0, plugintype: 'local', pluginname: 'program', id: {{ curriculumid }} }) })(event)"><i class="icon fa fa-cog fa-fw" aria-hidden="true"  title = "{{# str}} edit {{/str}}"></i>
                    </a>
                </div>
            {{/ edit}}
        </li>
        <li>
            {{# cancreatesemester }}
                <div class="pull-right">
                    <a title="{{#str}}addsemester, local_program {{/ str }}" class="course_extended_menu_itemlink" href="javascript:void(0)" onclick="(function(e){ require('local_curriculum/ajaxforms').init({contextid:1, component:'local_curriculum', callback:'curriculum_managesemester_form', form_status:0, plugintype: 'local', pluginname: 'program_addsemester', id: 0, curriculumid:{{curriculumid}}  }) })(event)">
                        <i class="icon fa fa-tags fa-fw" aria-hidden="true" title="{{#str}}addsemester, local_program {{/ str }}"></i>
                    </a>
                </div>
            {{/ cancreatesemester }}
        </li>
    </ul>
{{/ action}}
{{# curriculum}}
<div class="curriculumview_container">
    <div class="col-12 col-sm-12 col-md-12 col-lg-12 classview_topcontent pl-0 pr-0">
        <!-- <div class="w-full pull-left classname" title = "{{ curriculumname }}"><h3>{{ curriculumname }}</h3></div> -->
        <div class="curriculum_view_content w-full pull-left">
            <div class="description w-full pull-left">
                {{# isdescription}}
                        {{^ descriptionstring}}
                            <p class="text-muted" title="{{{ description }}}">{{{ description }}}</p>
                        {{/ descriptionstring }}
                        {{# descriptionstring}}
                            <p class="text-muted" title="{{{ description }}}">{{ descriptionstring }}...</p>
                        {{/ descriptionstring }}
                    {{/ isdescription}}
                    {{^ isdescription }}
                        <p class="alert alert-info text-xs-center">{{#str}}nocoursedesc, local_courses{{/str}}</p>
                    {{/ isdescription }}
            </div>
        </div>
    </div>
    <div class="curriculum_view_content w-full pull-left">
        {{{ curriculumsemesters }}}
    </div>
</div>
{{/ curriculum}}
