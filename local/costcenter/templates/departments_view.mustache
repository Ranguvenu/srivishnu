            </div>
        {{/ departments_content}}
    </div>
</div>
{{#js }}
    var accItem = document.getElementsByClassName('dept_content');
    var accHD = document.getElementsByClassName('deptimg_container');
    for (i = 0; i < accHD.length; i++) {
        accHD[i].addEventListener('click', toggleItem, false);
    }
    function toggleItem() {
        var itemClass = this.parentNode.className;
        for (i = 0; i < accItem.length; i++) {
            accItem[i].className = 'col-md-12 col-sm-12 col-12 dept_content';
        }
        if (itemClass == 'col-md-12 col-sm-12 col-12 dept_content') {
            this.parentNode.className = 'col-md-12 col-sm-12 col-12 dept_content detailsopen';
        }
    }
{{/ js}}
