    {{#response}}
        {{#viewtypeCard}}
        <div class="userdashboard_content {{{course_count_view}}} usrd_prgcontainer">
        {{#records}}
            <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 courses_inprogress_slide {{subtab}} ctype_program usrd_prgcontent">
                <div class="bootcamp_container w-full pull-left" >
                    <div class="col-md-12 pt-10px p-b-1 pl-0 pr-0 programcontainer_top">
                        <div class="w-full pull-left">
                            <div class="w-full coursecontent">
                                
                                <div class="mb-10px programname">
                                    <a href="{{{bootcamp_url}}}" title="{{{bootcamp_fullname}}}" class="bootcamp_name"> {{{inprogress_bootcamp_fullname}}}</a>
                                </div>
                                <div class="desc-img-container" {{#program_imgpath}} style="background-image: url('{{{ program_imgpath }}}');" {{/program_imgpath}}>
                                    <span class="desc-img-fade"></span>
                                    <div class="desc w-full pull-left">{{{bootcampdescription}}}</div>
                                </div>
                                <div class='prg-cms-container col-12 p-0 m-t-1'>
                                    <div class='prg-cms-cnt smdevicepl0'>
                                        <p class="mb-10px w-full pull-left">
                                            <span class="pull-left infolable-container">
                                                <span class="pull-left info_lable">Years</span>
                                                <span class="pull-left infolable-value yea">{{programyears}}</span>
                                            </span>
                                        </p>
                                    </div>
                                    <div class='prg-cms-cnt'>
                                        <p class="mb-10px w-full pull-left">
                                            <span class="pull-left infolable-container">
                                                <span class="pull-left info_lable">Semesters</span>
                                                <span class="pull-left infolable-value semin">{{programsemesters}}</span>
                                            </span>
                                        </p>
                                    </div>
                                    <div class='prg-cms-cnt'>
                                        <p class="mb-10px w-full pull-left">
                                            <span class="pull-left infolable-container">
                                                <span class="pull-left info_lable">Courses</span>
                                                <span class="pull-left infolable-value Couin">{{programcourses}}</span>
                                            </span>
                                        </p>
                                    </div>
                                </div>
                                <div class="w-full pull-left mt-15px stable-buttons pr-10px">
                                    <div class="pull-left pr-0 mt-5px">
                                        <a href="{{syllabus_url}}">
                                             <span class="viewsyllabus">{{#str}}viewsyllabus,block_userdashboard{{/str}}</span>
                                        </a>
                                    </div>
                                    <div class="pull-right pr-0">
                                        <a href="{{{bootcamp_url}}}">
                                             <button class="btn btn-primary launch_btn">{{#str}}view,moodle{{/str}}</button>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        {{/records}}

    </div>
    {{/viewtypeCard}}
